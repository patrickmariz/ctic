<p id="notice"><%= notice %></p>

<h1>Serviços Agendados</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Cliente</th>
      <th>Servico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agendamentos.each do |agendamento| %>
      <tr>
        <td><%= agendamento.data %></td>
        <td><%= agendamento.cliente %></td>
        <td><%= agendamento.servico %></td>
        <td><%= link_to 'Mostrar', agendamento %></td>
        <td><%= link_to 'Editar Agendamento', edit_agendamento_path(agendamento) %></td>
        <td><%= link_to 'Cancelar Agendamento', agendamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

